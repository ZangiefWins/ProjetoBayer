<!DOCTYPE html>
<html>
    <head>
        <title>Página do recrutador</title>
        <meta charset='utf-8'>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../public/css/style.css" type="text/css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <h1>Banco de Currículos:</h1>

        <label for="exibirArquivados">Exibir arquivados</label>
        <input type="checkbox" name="exibirArquivados" id="exibirArquivados" value="exibirArquivados">

        <div id="curriculosNaoArquivados">
            <h2>Não arquivados:</h2>
                <ul id="naoArquivados">
                    <div class = "container align-items-center" id="listaBox">
                    <% curriculos.forEach(function(curriculo) { %>
                        <% if (!curriculo.arquivado) { %>
                                <div class ="row" id="listaCurriculo">
                                    <div class = "col-5 col-md-5 col-xl-8">    
                                        <li><a href="/curriculo/<%= curriculo._id %>"><%= curriculo.perfil.nome %></a></li>
                                    </div>
                                    <div class = "col-2 ">
                                        <li><button onclick="arquivarCurriculo('<%= curriculo._id %>')">Arquivar</button></li>
                                    </div>
                                    <div class = "col-2 ">
                                        <li><button onclick="deletarCurriculo('<%= curriculo._id %>')">Deletar</button></li>
                                    </div>
                                </div>
                        <% } %>
                    <% }); %>
                    </div>            
                </ul>
        </div>

        <div id="curriculosArquivados" style="visibility: hidden">
            <h2>Arquivados:</h2>
            <ul id="arquivados">
                <% curriculos.forEach(function(curriculo) { %>
                    <% if (curriculo.arquivado) { %>
                        <li><a href="/curriculo/<%= curriculo._id %>"><%= curriculo.perfil.nome %></a></li>
                        <li><button onclick="deletarCurriculo('<%= curriculo._id %>')">Deletar</button></li>
                    <% } %>
                <% }); %>
            </ul>
        </div>

        <script src="../public/javascript/jquery-3.4.1.min.js"></script>
        <script src="../public/javascript/scriptRecrutador.js"></script>
    </body>
</html>