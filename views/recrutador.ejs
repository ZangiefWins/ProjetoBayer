<!DOCTYPE html>
<html>
    <head>
        <title>Página do recrutador</title>
        <meta charset='utf-8'>
    </head>
    <body>
        <h1>Currículos no banco:</h1>
        <ul>

            <% curriculos.forEach(function(curriculo) { %>
                <li><a href="/curriculo/<%= curriculo._id %>"><%= curriculo.perfil.nome %></a></li>
                <li><button onclick="arquivarCurriculo('<%= curriculo._id %>')">Arquivar</button></li>
            <% }); %>

        </ul>

        <script src="../public/javascript/jquery-3.4.1.min.js"></script>
        <script src="../public/javascript/script.js"></script>
    </body>
</html>