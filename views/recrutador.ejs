<!DOCTYPE html>
<html>

<head>
    <title>Página do recrutador</title>
    <meta charset='utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../public/css/styleRecrutador.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar sticky-top navbar-light navbar-expand-sm navbar-expand-md navbar-expand-lg" style="background: linear-gradient(to left top, #e9e7e7, #ebeaea)">
            <button class="btn  d-sm-none d-md-none d-lg-none" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    &#9776;
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Vagas</a>
                <a class="dropdown-item" href="#">Candidatos</a>
            </div>
        </div>
        <span class="navbar-brand mb-0 h1">Talent Acquisition</span>
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-block">
                    <a class="nav-link">Vagas</a>
                </li>
                <li class="nav-item d-none d-sm-block">
                    <a class="nav-link">Candidatos</a>
                </li>
            </ul>
    </nav>
    <div class="container" id="upper-div">
        <div class="row py-4">
            <input type="button" id="arquivarSelecionados" class="btn btn-secondary btn-sm col-6 col-md-3 col-lg-2"
                value="Arquivar selecionados" data-toggle="modal" data-target="#modal"
                onclick="mostrarModal('arquivar')">
            <input type="button" id="deletarSelecionados" class="btn btn-secondary btn-sm col-6 col-md-3 col-lg-2"
                value="Deletar selecionados" data-toggle="modal" data-target="#modal" onclick="mostrarModal('deletar')">
            <input type="button" id="exibirArquivados"
                class="btn btn-secondary btn-sm col-6 col-md-3 col-lg-2 offset-lg-4 activable"
                value="Exibir arquivados">
            <input type="button" id="exibirNaoArquivados"
                class="btn btn-secondary btn-sm active col-6 col-md-3 col-lg-2 activable" value="Exibir não arquivados">
        </div>
        <div class="row pb-4">
            <form name="inserirNovaVaga" class="form-inline" method="POST">
                <input type="text" id="nome" name="nome" class="form-control" placeholder="Nova vaga..." required>
                <input type="text" id="palavrasChave" name="palavrasChave" class="form-control" placeholder="Palavras-chave(opcional)">
                <input type="submit" id="submeterVaga" class="form-control btn btn-secondary" value="Inserir vaga">
            </form>
            <input type="text" id="pesquisaPorNome" placeholder="Pesquisar por nome">
            <select name="vaga">
                <option value="selecione">Selecione uma vaga</option>
                <% vagas.forEach(function(vaga) { %>
                <option value="<%= vaga._id %>"><%= vaga.nome %></option>
                <% }); %>
            </select>
            <input type="button" id="removerVaga" class="btn btn-secondary" value="Remover vaga selecionada"
                onClick="removerVaga()">
        </div>
    </div>
    <% vagas.forEach(function(vaga) { %>
    <div id="curriculosNaoArquivados<%= vaga._id %>" class="container overflow-auto d-none">
        <% naoArquivados.forEach(function(curriculo) { %>
        <% if (curriculo.vaga == vaga.nome) { %>
        <div class="row finalBorder" id="listaCurriculo">
            <div class="row col-12 col-sm-10 col-md-10 col-lg-10">
                <div class="col-2 col-sm-1 col-md-1 col-lg-1 align-self-center">
                    <input type="checkbox" id="<%= curriculo._id %>"></li>
                </div>
                <div class="col-8 col-sm-6 col-md-7 col-lg-7 align-self-center">
                    <a href="/curriculo/<%= curriculo._id %>" class="nome"><%= curriculo.perfil.nome %></a></li>
                </div>
                <div class="col-12 col-sm-5 col-md-4 col-lg-4 d-flex justify-content-center text-center align-self-center">
                    <span>Pontuação: <%= curriculo.pontuacao %></span></li>
                </div>
            </div>
            <div class="row col-12 col-sm-1 col-md-2 col-lg-2">
                <div class="col-6 col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center text-center align-self-center">
                    <button class="btn arch"
                        onclick="arquivarCurriculo('<%= curriculo._id %>')"></button></li>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center text-center align-self-center">
                    <button class="btn dlt" 
                        onclick="deletarCurriculo('<%= curriculo._id %>')"></button></li>
                </div>
            </div>
        </div>
        <% } %>
        <% }); %>
    </div>

    <div id="curriculosArquivados<%= vaga._id %>" class="container overflow-auto d-none">
        <% arquivados.forEach(function(curriculo) { %>
        <% if (curriculo.vaga == vaga.nome) {%>
        <div class="row finalBorder" id="listaCurriculo">
            <div class="row col-12 col-sm-10 col-md-10 col-lg-10">
                <div class="col-2 col-sm-1 col-md-1 col-lg-1 align-self-center">
                    <input type="checkbox" id="<%= curriculo._id %>">
                </div>
                <div class="col-8 col-sm-6 col-md-7 col-lg-7 align-self-center">
                    <a href="/curriculo/<%= curriculo._id %>"><%= curriculo.perfil.nome %></a>
                </div>
                <div class="col-12 col-sm-5 col-md-4 col-lg-4 d-flex justify-content-center text-center align-self-center">
                    <span>Pontuação: <%= curriculo.pontuacao %></span>
                </div>
            </div>
            <div class="row col-12 col-sm-1 col-md-2 col-lg-2">
                <div class="col-6 col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center text-center align-self-center">
                    <button class="btn btn-secondary btn-sm"
                        onclick="desarquivarCurriculo('<%= curriculo._id %>')">Desarquivar</button>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center text-center align-self-center">
                    <button class="btn btn-secondary btn-sm"
                        onclick="deletarCurriculo('<%= curriculo._id %>')">Deletar</button>
                </div>
            </div>
        </div>
        <% } %>
        <% }); %>
    </div>
    <% }); %>

    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Confirmação</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <span id="modal-body-text"></span>
                </div>
                <div class="modal-footer">
                    <input type="button" id="modalNo" class="btn btn-secondary" data-dismiss="modal" value="Não">
                    <input type="button" id="modalYes" class="btn btn-primary" value="Sim">
                </div>
            </div>
        </div>
    </div>
    <script src="../public/javascript/scriptRecrutador.js"></script>
</body>

</html>